        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree-city"></i></div>
        <p>TreeHouse</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mug-saucer"></i></i></div>
        <p>BedAndBreakfasts</p>
      </div>
      <div class="filter">
        <div> <i class="fa-solid fa-umbrella-beach"></i></i></div>
        <p>Beach</p>
      </div>
    </div>


    <div class="ms-auto tax-icon">
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>


  </div>


  <Div class="row all-Listings row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <%for(listing of allListings){%>
      <!-- <li><a href="/listings/<%=listing._id%>"><%=listing.title%></a></li> -->
      <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card ">
          <img src="<%=listing.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <form action="/listings/<%=listing.id%>/booking" method="post"  class="booking-form" onsubmit="return stopAnchor(event)"; >
            <button type="submit" class="btn btn-sm booking-btn">Book Now</button>
          </form>
          

          <div class="card-body">
            <p class="card-text"> <b>
                <%=listing.title%>
              </b></p>
            <p class="card-text">&#8377 <%= listing.price.toLocaleString("en-IN") %>/Night
                <i class="tax-info"> &nbsp; &nbsp;+18% GST</i></p>
          </div>
        </div>
      </a>
      <%}%>
  </Div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
    let forms = document.querySelectorAll("form");
    forms.forEach((form) => {
        form.addEventListener("submit", (event) => {
            event.stopPropagation(); // Prevent interaction with anchor tag
            console.log("Form submitted successfully!");
        });
    });
});

function stopAnchor(event) {
    event.stopPropagation(); // Prevents anchor click interference
    return true; // Allow form submission
}

  </script>