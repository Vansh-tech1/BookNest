<% layout('/layouts/boilerplate') -%>

<body>
     <h2 style="margin-left: 1rem; ">   All listings</h2> 
     <!-- <form action="/listings/new" method="get">
        <button>Create New Listing</button>
    </form> --> 



    <Div class="row all-Listings row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(listing of allListings){%>
            <!-- <li><a href="/listings/<%=listing._id%>"><%=listing.title%></a></li> -->
             <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card ">
                    <img src="<%=listing.image%>" class="card-img-top" alt="..." style="height: 20rem;" >
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"> <b><%=listing.title%></b></p>
                      <p class="card-text">&#8377 <%= listing.price.toLocaleString("en-IN") %></p>
                    </div>
                  </div>
             </a>
            
            
        <%}%>    
    </Div>
    
</body>