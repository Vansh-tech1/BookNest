<% layout('/layouts/boilerplate') -%>

<div class="row mt-3" style="margin: 0;">
    <div class="col-5 offset-3 " style="padding: 0;">
        <h2>Listing Details:</h2>
    </div>

    <div class="card col-5 offset-3 mt-3 show-card ">
        <img class="card-img-top show-img" src="<%=listing.image%>" alt="Card image cap">
        <div class="card-body">
            <p class="card-text mt-3">
                <b> <%=listing.title%> </b><br>
                <i><%= listing.description %></i> <br>
                &#8377 <%= listing.price.toLocaleString("en-IN") %><br>
                <%= listing.location %> <br>
                <%= listing.country %> <br>
            </p>
        </div>
    </div>

    <div class="show-btn col-8 offset-3 ">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark  edit-btn">Edit</a>

        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="col-1" style="margin-left: 2px; " >
            <button class="btn btn-dark ">Delete</button>
        </form>
    </div>
</div>    